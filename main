    <script>
      $('#login_button input').click(function(){
        if($('#id').val().length < 4){
          alert('INPUT VALID ID!');
        } else if($('#password').val().length < 4 || $('#password').val().length > 20){
          alert('INPUT VALID PASSWORD!')
        } else {
          $.ajax({
            url: '/login',
            type: 'post',
            data: {id:$('#id').val(), pw:$('#password').val()},
            dataType: "json"
          }).done(function(data, textStatus, xhr){
            if(data['result']==2){
              alert("ID Doesn't exist");
            } else if(data['result']==1){
              location.href='/myprofile';
            } else{
              alert("ID PASSWORD DOESN't MATCH");
            }
          })
        }
      })
    </script>

